<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455FF3">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_check_24" />

    <LinearLayout
        android:id="@+id/form_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

      <TextView
          android:id="@+id/nama_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/judul_label"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:textColor="#000000"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/form_judul"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/kategori_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:text="@string/kategori"
          android:textColor="#000000"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/form_kategori"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/catatan_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:text="@string/catatan"
          android:textColor="#000000"
          android:textStyle="bold" />

      <EditText
          android:id="@+id/form_email"
          android:layout_width="match_parent"
          android:layout_height="350dp"
          android:hint="Isi Catatan"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:gravity="top"/>
    </LinearLayout>
</RelativeLayout>